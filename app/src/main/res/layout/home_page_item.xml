<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:padding="10dp"
    android:id="@+id/homepage_cv"
    android:elevation="10dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:id="@+id/relative_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/prod_image_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/lg001"/>

        <TextView
            android:id="@+id/prod_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/prod_image_iv"
            android:layout_margin="10dp"
            android:text="fwefwefewfew"/>

        <TextView
            android:id="@+id/prod_rate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/prod_image_iv"
            android:layout_below="@id/prod_name_txt"
            android:layout_margin="10dp"
            android:text="fwefwefewfew"/>

        <TextView
            android:id="@+id/prod_price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/prod_image_iv"
            android:layout_below="@id/prod_rate_txt"
            android:layout_margin="10dp"
            android:text="fwefwefewfew"/>





    </RelativeLayout>

</androidx.cardview.widget.CardView>